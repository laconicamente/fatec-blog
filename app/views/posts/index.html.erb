<div clas="container-fluid">
	<div clas="row">
		<% @posts.each do |post| %>
			<div class="col-md-12 post-index">
				<h1 class="title text-title"><%= link_to post.title, post %></h1>
				<p class="date"><%= post.created_at.strftime("%d, %B, %Y") %></p>
			</div>
		<% end %>
	</div>
</div>
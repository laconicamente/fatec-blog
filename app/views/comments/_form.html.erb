<%= form_for([@post, @post.comments.build]) do |f| %>
	<div class="form-group">
		<div class="col-md-12"><%= f.label :name, "Nome:", class: "col-md-1 control-label" %></div>
		<div class="col-md-8">
		<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-12"><%= f.label :body, "Mensagem:", class: "col-md-1 control-label" %></div>
		<div class="col-md-8">
		<%= f.text_area :body, class: "form-control" %>
		</div>
	</div>
		<div class="col-md-2 padding-top" >
		<%= f.submit 'Enviar', :class => 'button' %>
		</div>
<% end %>